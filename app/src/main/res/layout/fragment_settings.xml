<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <CheckBox
            android:id="@+id/checkBoxAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Album"
            android:textAlignment="textStart" />

        <CheckBox
            android:id="@+id/checkBoxArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textAlignment="textStart" />

        <CheckBox
            android:id="@+id/checkBoxPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:textAlignment="textStart" />

        <CheckBox
            android:id="@+id/checkBoxSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song"
            android:textAlignment="textStart" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reload Files"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clicking on this button will reload the database (may take a few minutes)"
        android:textColor="@color/black_overlay"
        android:layout_margin="10dp"/>

    <Button android:id="@+id/buttonReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reload files"
        android:layout_gravity="center"/>

</LinearLayout>